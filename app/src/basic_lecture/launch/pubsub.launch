<launch>
  <arg name="mode" default="true"/>
  <group if="$(arg mode)">
    <node name="basic_simple_talker"   pkg="basic_lecture" type="basic_simple_talker" output="screen">
      <remap from="chatter" to="content"/>
      <param name="content" value="alternative hello"/>
    </node>
    <node name="basic_simple_listener1" pkg="basic_lecture" type="basic_simple_listener" output="screen">
      <remap from="chatter" to="content"/>
    </node>
    <node name="basic_simple_listener2" pkg="basic_lecture" type="basic_simple_listener" output="screen">
      <remap from="chatter" to="content"/>
    </node>
  </group>
</launch>
